<h1 align="center">Welcome to Discussion Forum!</h1>
<div class="wrapper">
<div class="ff">
<%= form_with(model: @session, local: true, url: create_session_path, method: "get") do |form| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
        <% @session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :username, placeholder:"Username", class: "field" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, placeholder: "Password", class: "field" %>
  </div>

  <div class="actions">
    <%= form.submit "Login", class: "btn btn-primary"%>
  </div>
<% end %>
<%=link_to "New User?", new_user_path, class: "new_user"%>
</div>
</div>


